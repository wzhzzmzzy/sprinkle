{
  "extends": [
    "../../.eslintrc.js"
  ],
  "overrides": [
    {
      "files": [
        "*.ts", "*.tsx"
      ],
      "parserOptions": {
        "project": [
          "./tsconfig.json",
          "./tsconfig.node.json"
        ]
      }
    }
  ],
  "env": {
    "node": true,
    "es2020": true
  },
  "rules": {
    "@typescript-eslint/no-var-requires": "off"
  }
}
