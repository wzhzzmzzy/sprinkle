{
  "name": "@sprinkle/monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=\"development\" ts-node ./packages/server/src/index.ts",
    "serve": "cross-env NODE_ENV=\"production\" ts-node ./packages/server/src/index.ts",
    "build:svelte:client": "vite build -c packages/svelte-app/vite.config.ts",
    "build:svelte:server": "vite build -c packages/svelte-app/vite.config.noexternal.ts",
    "build:svelte": "pnpm run build:svelte:client & pnpm run build:svelte:server",
    "build:react:client": "vite build -c packages/react-app/vite.config.ts --emptyOutDir",
    "build:react:server": "vite build -c packages/react-app/vite.config.noexternal.ts",
    "build:react": "pnpm run build:react:client & pnpm run build:react:server",
    "build:wasm": "wasm-pack build packages/excel-wasm --out-dir ../excel-wasm-dist --target web",
    "prepare": "husky install"
  },
  "author": "wzhzzmzzy",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,svelte}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "fastify": "^3.27.4",
    "immer": "^9.0.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.7",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2",
    "vite": "^2.8.0"
  }
}
